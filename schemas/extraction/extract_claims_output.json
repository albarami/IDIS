{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ExtractClaimsOutput",
  "description": "Output schema for EXTRACT_CLAIMS_V1 prompt",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["claim_text", "claim_class", "source_locator", "confidence"],
    "properties": {
      "claim_text": {
        "type": "string",
        "description": "The factual assertion extracted"
      },
      "claim_class": {
        "type": "string",
        "enum": ["FINANCIAL", "TRACTION", "MARKET_SIZE", "COMPETITION", "TEAM", "LEGAL_TERMS", "TECHNICAL", "OTHER"],
        "description": "Category of the claim"
      },
      "value_struct": {
        "type": "object",
        "properties": {
          "value": {},
          "unit": {"type": "string"},
          "currency": {"type": "string"},
          "time_window": {"type": "string"},
          "as_of_date": {"type": "string"}
        }
      },
      "source_locator": {
        "type": "object",
        "description": "Location within the chunk where the claim was found"
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "Extraction confidence score"
      },
      "requires_review": {
        "type": "boolean",
        "description": "Whether this claim needs human review"
      },
      "review_reason": {
        "type": "string",
        "description": "Reason for requiring human review"
      }
    },
    "additionalProperties": false
  }
}
